# Supabase (실제 값은 .env.local에만 넣고, .env.example은 빈 채로 커밋)
# Project URL 형식: https://프로젝트참조.supabase.co
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Naver (News API + Login)
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=

# Kakao
NEXT_PUBLIC_KAKAO_CLIENT_ID=
KAKAO_CLIENT_SECRET=

# Google
NEXT_PUBLIC_GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Vercel Cron 인증 (선택)
CRON_SECRET=

# 관리자 이메일 (콤마로 구분해 다중 설정 가능)
# 예: ADMIN_EMAILS=admin@gmail.com,ops@gmail.com
ADMIN_EMAILS=

# 이메일 발송 (Resend - https://resend.com)
RESEND_API_KEY=
# 발신자 표시 이름+주소 (Resend에서 도메인 인증 필요)
EMAIL_FROM=whynali <noreply@whynali.com>
# 관리자 알림 수신 이메일 (콤마로 구분해 다중 설정 가능)
# 예: ADMIN_NOTIFY_EMAILS=admin@gmail.com,ops@gmail.com
ADMIN_NOTIFY_EMAILS=
# 사이트 URL (이메일 내 링크 생성용)
NEXT_PUBLIC_SITE_URL=http://localhost:3000
